{
  "name": "win-loss-counter",
  "version": "1.0.0",
  "description": "A Win/Loss Counter Desktop App (React + Electron)",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"cd frontend && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "cd frontend && npm run build && cd .. && electron-builder -c.electronVersion=35.0.3",
    "package": "electron-builder --win --mac --linux"
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.example.winloss",
    "productName": "WinLossCounter",
    "directories": {
      "output": "dist"
    },
    "electronVersion": "35.0.3",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "compression": "store"  // ✅ Fixes 7-Zip crash in GitHub Actions
    },
    "mac": {
      "target": ["zip", "dmg"],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": ["AppImage"]
    },
    "files": [
      "frontend/dist/**/*",
      "main.js",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "author": "Harry Wu",
  "license": "ISC",
  "env": {
    "GH_TOKEN": "${{ secrets.GH_TOKEN }}"  // ✅ Adds GH_TOKEN for GitHub Releases
  }
}
